<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <template id="report_picking_batch_acuarella" inherit_id="stock_picking_batch.report_picking_batch" primary="True">
        <xpath expr="//t[@t-set='locations']" position="after">
            <t t-set="is_batch_acuarella" t-value="True" />
        </xpath>
        <!-- Modification of picking table top info -->
        <xpath expr="//div[hasclass('page')]/div[hasclass('d-flex')]" position="after">
            <div id="batch_info_fields">
                <table class="table table-borderless">
                    <thead>
                        <tr>
                            <th id="label_col"/>
                            <th />
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>Delivery Address:</td>
                            <td><span class="px-2" t-field="o.supervisor" /></td>
                        </tr>
                        <tr>
                            <td>Logistic Route:</td>
                            <td><span class="px-2" t-field="o.sale_logistic_routes" /></td>
                        </tr>
                        <tr>
                            <td>Created by:</td>
                            <td><span class="px-2" t-field="o.user_id" /></td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </xpath>
        <xpath expr="//div[hasclass('page')]/div[hasclass('d-flex')]" position="replace" />
        <xpath expr="//div[hasclass('page')]/div[@t-if='o.user_id']" position="replace" />
        <!-- Replacing whole picking table -->
        <xpath expr="//tr[@t-as='pick']//ancestor::table" position="replace">
            <table id="picking_table" class="table table-borderless">
                <thead>
                    <tr>
                        <th id="th_sequence">Sequence</th>
                        <th id="th_contact">Contact</th>
                        <th id="th_ref">Document Ref</th>
                        <th id="th_address">Contact Address</th>
                        <th id="th_phone">Phone</th>
                        <th id="th_package_num"># Packages</th>
                        <th id="th_charge">Charge</th>
                    </tr>
                </thead>
                <tbody>
                    <tr t-foreach="o.picking_ids.sorted(lambda p: p.batch_sequence)" t-as="pick">
                        <td class="text-center">
                            <span t-out="pick_index + 1" />
                        </td>
                        <td>
                            <span t-field="pick.partner_id">Demo</span>
                        </td>
                        <td>
                            <div t-if="pick.origin"><span t-field="pick.origin">S001</span></div>
                            <div t-if="pick.carrier_tracking_ref"><span t-field="pick.carrier_tracking_ref">REF001</span></div>
                        </td>
                        <td>
                            <span t-field="pick.partner_address">Demo Address</span>
                        </td>
                        <td>
                            <span t-field="pick.partner_phone">+5290123001231</span>
                        </td>
                        <td class="text-center">
                            <span t-field="pick.package_num">5</span>
                        </td>
                        <td>
                            <span t-field="pick.charge">$1500</span>
                        </td>
                    </tr>
                </tbody>
            </table>
        </xpath>
    </template>
</odoo>
