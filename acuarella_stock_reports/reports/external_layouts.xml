<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <template id="external_layout" inherit_id="web.external_layout">
        <xpath expr="//t[@t-if='company.external_report_layout_id']" position="before">
            <t t-if="o and o._name == 'stock.picking.batch' and is_batch_acuarella" t-call="acuarella_stock_reports.external_layout_standard_acuarella"><t t-out="0" /></t>
        </xpath>
        <xpath expr="//t[@t-if='company.external_report_layout_id']" position="attributes">
            <attribute name="t-if" />
            <attribute name="t-elif">company.external_report_layout_id</attribute>
        </xpath>
    </template>

    <template id="external_layout_standard_acuarella" inherit_id="web.external_layout_standard" primary="True">
        <xpath expr="//img[hasclass('o_company_logo_small')]" position="after">
            <h4 t-out="o.name">Batch Sequence</h4>
        </xpath>
    </template>
</odoo>
