<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="vpicktree" model="ir.ui.view">
        <field name="name">stock.picking.view.list.inherit.acuarella</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.vpicktree" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='partner_id']" position="after">
                <field name="sale_logistic_route" />
            </xpath>
        </field>
    </record>

    <record id="stock_picking_view_batch_tree_ref" model="ir.ui.view">
        <field name="name">stock.picking.view.batch.tree.ref.inherit"</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock_picking_batch.stock_picking_view_batch_tree_ref" />
        <field name="arch" type="xml">
            <xpath expr="//list" position="attributes">
                <attribute name="editable">bottom</attribute>
            </xpath>
            <xpath expr="//field[@name='sale_logistic_route']" position="attributes">
                <attribute name="column_invisible">1</attribute>
            </xpath>
            <xpath expr="//field[@name='origin']" position="after">
                <field name="carrier_tracking_ref" />
                <field name="partner_address" />
                <field name="partner_phone" />
                <field name="package_num" />
                <field name="charge"/>
            </xpath>
        </field>
    </record>
</odoo>
